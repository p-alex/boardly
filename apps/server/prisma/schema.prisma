generator client {
  provider = "prisma-client"
  output   = "../generated/prisma_client"
}

datasource db {
  provider = "postgresql"
}

enum OAuthProvider {
  GOOGLE
}

enum SecretVersions {
  V1
  V2
}

model User {
  id                              String         @id
  username                        String         @unique
  encrypted_email                 String?
  hashed_email                    String?        @unique
  email_encryption_secret_version SecretVersions @default(V1)
  email_hash_secret_version       SecretVersions @default(V1)
  email_verified                  Boolean        @default(false)
  hard_lock_until                 DateTime?
  updated_at                      DateTime       @updatedAt
  created_at                      DateTime       @default(now())

  passwordAuth          UserPasswordAuth?
  emailVerificationCode EmailVerificationCode?

  @@map("users")
}

model UserPasswordAuth {
  user_id                 String         @id
  password_hash           String
  password_pepper_version SecretVersions @default(V1)

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@map("user_password_auth")
}

model EmailVerificationCode {
  id              String    @id
  user_id         String    @unique
  code_hash       String
  expires_at      DateTime
  attempts        Int       @default(0)
  last_attempt_at DateTime?
  lock_until      DateTime?
  user            User      @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@map("email_verification_codes")
}
